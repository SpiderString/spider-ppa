table.insert(text, {text="Secant can also be defined as sec(x)=1/cos(x)", color=colors["text"]})
table.insert(text, {text="Radians are a measure for angles in terms of a circle's radius. a=x°π/180", color=colors["text"]})
table.insert(text, {text="E.G. =sec(pi/3) -> 2, =sec(pi) -> -1", color=colors["footnote"]})
