local colors=run("SpiderCalc/HelpDocs/formatting")
local text={}
table.insert(text, {text="<-----SpiderCalc Help----->", color=colors["header"]})
table.insert(text, {text="Tan(x) is a trigonometric function.", color=colors["text"]})
table.insert(text, {text="Like all trig functions, tangent takes an angle in radians and outputs a ratio.", color=colors["text"]})
table.insert(text, {text="Tangent is equal to the side adjacent to the angle over the side opposite it in a right triangle.", color=colors["text"]})
table.insert(text, {text="Tangent can also be defined as tan(x)=sin(x)/cos(x)", color=colors["text"]})
table.insert(text, {text="Radians are a measure for angles in terms of a circle's radius. a=x°π/180", color=colors["text"]})
table.insert(text, {text="E.G. =tan(45pi/180) -> 1, =tan(pi/3) -> 1.732051", color=colors["footnote"]})
return text
