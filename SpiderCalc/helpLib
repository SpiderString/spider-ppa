local chatDelay=800
local pi=math.pi
local e=math.e
local errorColor="&4"

--Lists Functions and usage in pm
function helpPage(player, arg)
  local selfPlayer=getPlayer()["name"]
  if filesystem.exists("macros/SpiderCalc/HelpDocs/"..arg) and arg~="formatting" then
    local helpDoc=run("SpiderCalc/HelpDocs/"..arg)
    if player == selfPlayer then
      for id, textTable in pairs(helpDoc) do
        advLog(textTable)
      end
    else
      for id, textTable in pairs(helpDoc) do
        local text=textTable["text"]
        say("/msg "..player.." "..text)
        sleep(chatDelay)
      end
    end
  else
    if player == selfPlayer then
      advLog({text="Help for '"..arg.."' doesn't exist or has not been made yet.", color=errorColor})
    else
      say("/msg "..player.." Help for '"..arg.."' doesn't exist or has not been made yet.")
    end
  end
end
function help(player, command, commandArgs)
  --no args, standard help
  if commandArgs[1]==nil then
    local selfPlayer=getPlayer()["name"]
    local helpText=run("SpiderCalc/HelpDocs/help")
    --logs instead of /msg'ing
    if player == selfPlayer then
      for id, textTable in pairs(helpText) do
        advLog(textTable)
      end
    else
      for id, textTable in pairs(helpText) do
        local text=textTable["text"]
        say("/msg "..player.." "..text)
        sleep(chatDelay)
      end
    end
  --args
  else
    helpPage(player, commandArgs[1]:lower())
  end
end
